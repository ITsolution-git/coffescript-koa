.realtimeStatus

    padding-left: 10px
    padding-top: 10px

.realtimeStatus td:nth-child(1)
    padding-top: 2px
    padding-bottom: 2px
    width: 200px

.realtimeStatus td:nth-child(2)
    padding-left: 10px
    padding-top: 2px
    padding-bottom: 2px
    width: 160px

.realtimeMessages

    padding-top: 10px
    padding-left: 6px
    padding-right: 6px
    width: 100%

    th
        border-bottom: 1px solid #000000

    th:nth-child(1)
        width: 80px
        max-width: 80px

    td
        padding-top: 4px
        padding-bottom: 4px

    tr:nth-child(odd) td
        background-color: #e5e5e5

.realtimeChangesTable

    width: 100%

    th
        border-bottom: 1px solid #000000

    th:nth-child(1)
        width: 80px
        min-width: 80px

    th:nth-child(2)
        width: 80px
        min-width: 80px

    th:nth-child(3)
        width: 60px

    td:nth-child(4)
        overflow: hidden
        width: 450px
        min-width: 450px
        max-width: 450px

    td:nth-child(5)
        overflow: hidden
        width: 240px
        min-width: 240px

    td
        padding-top: 3px
        padding-bottom: 3px
        overflow: hidden

    tr:nth-child(odd) td
        background-color: #e5e5e5

.realtimeChanges

    padding-top: 20px
    width: 100%

    th
        border-bottom: 1px solid #000000

    th:nth-child(1)
        width: 280px

    th:nth-child(2)
        width: 60px

    th:nth-child(3)
        width: 60px

    td:nth-child(4)
        width: 160px
        max-width: 160px
        overflow: hidden

    td
        padding-top: 3px
        padding-bottom: 3px

    tr:nth-child(odd) td
        background-color: #e5e5e5

.blockGraph
    width: 100%
    height: 300px

.systemOverview
    width: 100%

    th
        border-bottom: 1px solid #000000

    th:nth-child(2)
        width: 80px
        text-align: right

    th:nth-child(3)
        width: 80px
        text-align: right

    th:nth-child(4)
        width: 80px
        text-align: right


    td:nth-child(2)
        text-align: right

    td:nth-child(3)
        text-align: right

    td:nth-child(4)
        text-align: right


    td
        padding-top: 4px
        padding-bottom: 4px

    tr:nth-child(odd) td
        background-color: #e5e5e5

