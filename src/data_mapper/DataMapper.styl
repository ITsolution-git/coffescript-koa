.mapColumn
    width            : 100%
    background-color : #dddddd
    border           : 1px solid #c9c9c9
    font-family      : Arial
    font-size        : 12px
    padding          : 6px
    display          : table-row


    label
        display:    table-cell
        width:      230px
        color:      #000000
        padding:    6px
        border-top: 1px solid #d2d2d2

    .data
        display:    table-cell
        color:      #600080
        padding:    6px
        border-top: 1px solid #d2d2d2

    .mapBox
        display:     table-cell
        width:       200px
        height:      100%
        border-left: 1px solid #d2d2d2
        padding:     6px
        border-top:  1px solid #d2d2d2
        color:       red
        cursor:     pointer



