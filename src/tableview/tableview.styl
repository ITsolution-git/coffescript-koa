span#ruler
    visibility: hidden
    white-space: nowrap
    font-size : 12px

.tableview:before
    content  : ""
    position : absolute

.tableviewSimpleWrapper
    overflow: auto

.tableview
    width: 100%
    border-inside: 1px solid #909090
    white-space: nowrap;
    table-layout: fixed;
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0

    div.text-right
        padding-right: 6px

    .header
        border: 1px solid blue

    .groupRow
        background-color: #101040
        color: white

    .groupRowChart1
        background-color: #4573A7
        color: white

    .groupRowChart2
        background-color: #AA4644
        color: white

    .groupRowChart3
        background-color: #71588F
        color: white

    .groupRowChart4
        background-color: #89A54E
        color: white

    .groupRowChart5
        background-color: #4298AF
        color: white

    .groupRowChart6
        background-color: #D09392
        color: white

    .groupRowChart7
        background-color: #D60006
        color: white


    div.cellfocus
        border:1px solid #40B080 !important
        background-color: rgba(250,255,250,0.6)

    // div.type_int,
    // div.type_decimal
    //     text-align: right
    //     padding-right: 6px

    div
        position    : absolute
        display     : block
        font-family : 'San Francisco Text', "Segoe UI", "Tahoma", "Arial";
        color       : black
        font-weight : 300
        font-size   : 12px
        padding     : 4px
        overflow    : hidden;
        background  : #ffffff;

    div.spacer.dragging
        background-color: blue
        border: 1px solid blue

    div.spacer
        border-right     : 1px solid #dddddd
        cursor           : ew-resize
        background-color : #EEEEEE
        background-image : linear-gradient(to bottom, #ffffff, #f2f2f2);
        margin           : 0
        padding          : 0

    div.spacer:hover
        background-color: #007F4A

    div.tableHeaderField
        background-color: #EEEEEE
        background-image: linear-gradient(to bottom, #ffffff, #f2f2f2);
        font-size: 12px
        font-weight: 400px
        line-height: 20px

    div.tableHeaderFieldHoriz
        background-color: #EEEEEE
        font-size: 12px
        font-weight: 400px
        line-height: 20px
        border-top: 1px solid #dddddd
        border-bottom: 1px solid #dddddd

    div.tableHeaderField i
        font-size: 10px
        padding-top: 6px

    div.even
        background: #f8f8f8;
        border-top: 1px dotted #dddddd
        border-bottom: 1px dotted #dddddd

    div.rowCheckbox
        padding-top: 2px
        cursor: pointer

    div.checkable
        width: 26px
        margin-left: 0px
        padding-left: 4px
        padding-right: 4px

    div.selected td
        background-color: rgba(237, 192, 80, 1.0)

    div.dataFilterWrapper
        margin           : 0px
        padding          : 0px
        border           : 0px
        border-top       : 1px solid #D6D6D6
        border-bottom    : 1px solid #D6D6D6
        border-right: 1px solid #dddddd
        background-color : white

    .tableRow .cell .dynamic_edit
        border           : 0px
        width            : 100%
        height           : 100%
        padding-left     : 4px
        padding-right    : 4px
        padding-top      : 0px
        padding-top      : 0px
        margin           : 0px
        background-color : rgba(204, 228, 240, 1.0)

    .tableRow .cell .table_button
        color            : #0000AA
        cursor           : pointer

    .tableRow .cell .table_button:hover
        border           : 1px solid #000070
        background-color : #eeeeff

    .tableRow .cell
        border-right     : 1px solid #dddddd
        cursor           : cell

    .tableRow .cell.editable:hover
        background-color : #B0E296
        cursor           : text

    .tableRow .cell.editable
        padding-left     : 4px
        padding-right    : 4px
        padding-top      : 2px
        padding-top      : 2px
        color            : #004F0A
        cursor           : ibeam

    .tableRow .cell.clickable
        color            : #0000BB
        cursor           : pointer

    .tableRow .cell.clickable:hover
        border           : 1px solid #000080
        background-color : #eeeeff

    .tableRow:
        border-top       : 1px solid rgba(0,0,0,0)
        border-bottom    : 1px solid rgba(0,0,0,0)

    .tableRow:hover div
        border-top       : 1px solid rgba(80,0,0,0.7)
        border-bottom    : 1px solid rgba(80,0,0,0.7)
        color            : #200000

    .tableRow .row_checked
        font-weight      : 600
        background-color : rgba(210, 190, 210, 0.4)

input.dataFilter:focus
    border           : 0px
    background-color : #f6fff6

input.dataFilter
    width         : 100%
    height        : 24px
    padding       : 0px
    margin        : 0px
    border        : 0px
    color         : #205020
    background-color: white
    // border-left: 1px solid blue

input.editing
    padding-left: 0px
    padding-right: 0px
    padding-top: 0px
    padding-top: 0px

span.fage
    text-align: right
    float: right
    color: #606060
    padding-right: 8px

.dataFilter.decimal
    text-align: right

.editable:hover
    border: 1px solid #00bb00

//fixed header styles for table
.outer-container
    position    : absolute
    height      : 100%
    bottom      : 0px
    padding-top : 10px
    width       : 100%
    overflow    : hidden

.inner-container
    height   : 100%
    width    : 100%
    overflow : hidden

.table-header
    height: 40px
    position: relative

.table-body
    height: calc(100% - 50px)
    overflow: auto

.table-wrapper
    position: relative
    height: 100%

.vscroll
    .marker
        background: #C8C8C8
        border-radius: 10px
