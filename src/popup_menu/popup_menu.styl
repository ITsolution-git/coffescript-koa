
.PopupMenu
	position:       absolute
	top:            0px
	left:           0px
	width:          300px
	z-index:        55000
	vertical-align: baseline
	margin:         0
	padding:        0
	border:         0
	cursor:         arrow
	box-sizing:     content-box
	background-color: rgba(30, 30, 30, 1.0)

	-webkit-touch-callout: none
	-moz-touch-callout:    none
	-ms-touch-callout:     none
	-o-touch-callout:      none
	touch-callout:         none

	webkit-tap-highlight-color: rgb(0,0,0)
	tap-highlight-color:        rgb(0,0,0)

	-webkit-text-size-adjust: none
	-moz-text-size-adjust:    none
	-o-text-size-adjust:      none
	text-size-adjust:         none

	-webkit-user-select: none
	-moz-user-select:    none
	-o-user-select:      none
	user-select:         none

	float:           none
	list-style:      disc outside none
	text-decoration: none
	font-size:       100%
	outline:         none

	// -webkit-padding-start: 0px
	// -webkit-margin-before: 0px

	box-shadow: 6px 6px 18px 4px rgba(0,0,0,0.75);
	border: 1px solid rgba(40,40,40,0.75)

	li

		width:            100%
		opacity:          100
		position:         relative
		padding:          0
		margin:           0
		height:           auto
		display:          block
		line-height:      40px;
		text-indent:      20px;
		background-color: rgba(30, 30, 30, 1.0)
		font-weight: 	  600
		font-size:		  16px
		border-bottom:	  1px solid #393939
		text-align:		  left
		text-indent:	  0
		color:			  #eeeeee

		i
			width: 38px

		span

			font-size:      14px
			font-weight:    300
			display:        block
			margin-top:     -6px
			color:          rgba(241, 230, 202, 1.0)
			line-height:    16px
			padding-left:   42px
			padding-bottom: 8px
			padding-right:  10px

	.itemlong
		font-size: 12px
		line-height: 30px
		padding-left: 8px

	li.item
		cursor: pointer
		padding-left: 4px

	li.item:hover
		box-shadow: 0 1px 3px 0 rgba(0,0,0,.53), 0 0 18px 0 rgba(0,0,0,.13);
		color:      rgba(255,255,255,1)
		background-color: #404040

	li.title

		background-color: rgba(243, 146, 62, 1.0)
		color:            #202020
		text-align:       center
		font-weight:      600

		span

			font-size:  12px
			display:    block
			margin-top: -20px
			color: rgba(71, 57, 41, 1.0)

ul.multicol
	-webkit-column-count: 2
	-moz-column-count:    2
	-ms-column-count:     2
	-o-column-count:      2
	column-count:         2

	-webkit-column-gap:   0
	-moz-column-gap:      0
	column-gap:           0

    -webkit-column-rule-color: #707070
    -moz-column-rule-color:    #707070
    column-rule-color:         #707070

	li.title
		-webkit-column-span: 2
		column-span: 2
		background-color: blue

