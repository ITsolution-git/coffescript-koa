.PopupWindow

	position:         absolute
	top:              0px
	left:             0px
	width:            300px
	z-index:          5000
	vertical-align:   baseline
	margin:           0
	padding:          0
	border:           0
	cursor:           arrow
	box-sizing:       content-box
	opacity: 		  1.0
	background-color: rgba(30, 30, 30, 1.0)

	touch-callout:       none
	tap-highlight-color: rgb(0,0,0)
	text-size-adjust:    none
	user-select:         none
	float:               none
	outline:             none
	box-shadow:          6px 6px 18px 4px rgba(0,0,0,0.75);
	border:              1px solid rgba(40,40,40,0.75)

	.title

		width:            100%
		background-color: #BBBBBB
		color:            #303030
		line-height:      26px
		font-size:        16px
		padding-left:     6px
		padding-right:    6px
		padding-top:      4px
		padding-bottom:   4px

		.closebutton
			float: right
			cursor: pointer
			width: 40px
			text-align: right

	.windowbody

		font-size:      14px
		padding-left:   6px
		padding-right:  6px
		padding-top:    4px
		padding-bottom: 4px

		.tableview
			tbody tr:hover td
				background-color: rgba(237, 192, 80, 1.0)
				cursor: pointer

			tbody tr:nth-child(even)
				background: #ffffff;

			tbody tr:nth-child(odd)
				background: #f8f8f8;

			td
				border-top: 1px dotted rgba(62, 62, 62, 1.0)
				border-bottom: 1px dotted rgba(62, 62, 62, 1.0)
				background-color: rgba(55, 56, 54, 1.0)
				color: rgba(230, 230, 230, 1.0)
				overflow: hidden;

			td.checkable
				width: 24px
				padding: 8px

			th
				background-color: rgba(70,70,70,1.0)
				vertical-align: baseline
				padding-top: 6px
				color: #eeeeee

.scrollable
	position:         absolute
	z-index:          3
	top: 			  0
	left:			  0
	// height:           100%
	overflow:         hidden
	width:            100%
	right:            0px
	background-color: #f8f8f8
	border-top:       1px solid #909090
	color:            #000000

.scrollcontent
	position                    : absolute
	z-index                     : 1
	-webkit-tap-highlight-color : rgba(0,0,0,0);
	width                       : 100%;
	-webkit-transform           : translateZ(0);
	-moz-transform              : translateZ(0);
	-ms-transform               : translateZ(0);
	-o-transform                : translateZ(0);
	transform                   : translateZ(0);
	-webkit-touch-callout       : none;
	-webkit-user-select         : none;
	-moz-user-select            : none;
	-ms-user-select             : none;
	user-select                 : none;
	-webkit-text-size-adjust    : none;
	-moz-text-size-adjust       : none;
	-ms-text-size-adjust        : none;
	-o-text-size-adjust         : none;
	text-size-adjust            : none;