.popupNavBar
	position         : absolute
	top              : 0px
	left             : 0px
	right            : 0px
	height           : 30px
	background-color : #CAE9C9
	border-top       : 1px solid #bbbbbb
	border-radius    : 0px
	padding          : 0px
	margin           : 0px

	.navbar-btn
		margin: 2px

	.container-fluid
		padding: 2px
		background-color: #f1f1f1

.toolbar-btn i
	font-size: 0.8em
	padding-left: 10px
	padding-right: 4px

.toolbar-btn
	line-height      : 18px
	padding-top      : 6px
	padding-bottom   : 6px
	padding-left     : 12px
	padding-right    : 12px
	background-color : #F6F6F6
	color            : #307030
	border           : 1px solid #E0E0E0

.toolbar-btn:hover
	background-color : #e1e1e1
	border           : 1px solid #D0D0D0
	color            : #108010

.PopupWindow .outer-container
    padding-top: 0px

.PopupWindow table
	width: 100%

.PopupWindow

	position:         absolute
	top:              0px
	left:             0px
	width:            300px
	z-index:          5000
	vertical-align:   baseline
	margin:           0
	padding:          0
	border:           0
	cursor:           arrow
	box-sizing:       content-box
	opacity: 		  1.0
	background-color: #E3DFDA

	touch-callout:       none
	tap-highlight-color: rgb(0,0,0)
	text-size-adjust:    none
	user-select:         none
	float:               none
	outline:             none
	box-shadow:          6px 6px 18px 4px rgba(0,0,0,0.75);
	border:              1px solid rgba(40,40,40,0.75)

	.title

		width            : 100%
		background-color : #535250
		color            : #E5E1DC
		line-height      : 26px
		font-size        : 16px
		padding-left     : 6px
		padding-right    : 6px
		padding-top      : 4px
		padding-bottom   : 4px
		cursor           : move

		.closebutton
			float: right
			cursor: pointer
			width: 40px
			text-align: right

	.windowbody

		font-size:      14px
		padding-left:   6px
		padding-right:  6px
		padding-top:    4px
		padding-bottom: 4px

		.tableview

			tbody tr:hover td
				background-color: rgba(237, 192, 80, 1.0)
				cursor: pointer

			tbody tr:nth-child(even)
				background: #ffffff;

			tbody tr:nth-child(odd)
				background: #f8f8f8;

			td
				border-top: 1px dotted rgba(200, 200, 200, 0.3)
				border-bottom: 1px dotted rgba(200, 200, 200, 0.3)
				color: #101010
				overflow: hidden;
				font-size: 11px

			td.checkable
				width: 24px
				padding: 8px

			th
				background-color: #FDFAF3
				vertical-align: baseline
				padding-top: 6px
				color: #3E270D
				font-size: 12px

.scrollable
	position:         absolute
	z-index:          3
	top: 			  0
	left:			  0
	// height:           100%
	overflow:         hidden
	width:            100%
	right:            0px
	background-color: #f8f8f8
	border-top:       1px solid rgba(30, 30, 30, 0.3)
	color:            #000000

	.resizeHandle
		background: url(/images/resize-handle.png) 100% 100% no-repeat
		position: absolute
		right:0
		bottom:0
		height:16px
		width:16px
		cursor: se-resize
		z-index: 9999999999

.scrollcontent
	position                    : absolute
	z-index                     : 1
	-webkit-tap-highlight-color : rgba(0,0,0,0);
	width                       : 100%;
	-webkit-transform           : translateZ(0);
	-moz-transform              : translateZ(0);
	-ms-transform               : translateZ(0);
	-o-transform                : translateZ(0);
	transform                   : translateZ(0);
	-webkit-touch-callout       : none;
	-webkit-user-select         : none;
	-moz-user-select            : none;
	-ms-user-select             : none;
	user-select                 : none;
	-webkit-text-size-adjust    : none;
	-moz-text-size-adjust       : none;
	-ms-text-size-adjust        : none;
	-o-text-size-adjust         : none;
	text-size-adjust            : none;
